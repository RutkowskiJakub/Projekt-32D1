<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1035dp"
        android:layout_height="713dp"
        android:contentDescription="@string/background"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg_pic" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_screen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#404040"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Menu"
        app:titleMarginStart="180dp" />

    <Button
        android:id="@+id/template_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/box"
        android:foreground="@drawable/ic_add_circle_outline_black_24dp"
        android:gravity="bottom|center"
        android:text="Szablony"
        android:textColor="#FBFBFB"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/history_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/box"
        android:foreground="@drawable/ic_history_black_24dp"
        android:gravity="bottom|center"
        android:text="Historia"
        android:textColor="#F8F8F8"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/box"
        android:foreground="@drawable/ic_settings_black_24dp"
        android:gravity="bottom|center"
        android:text="Settings"
        android:textColor="#F8F8F8"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/training_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/box"
        android:gravity="bottom|center"
        android:text="Treningi"
        android:textColor="#F8F8F8"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>